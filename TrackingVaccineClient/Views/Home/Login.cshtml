@model TrackingVaccineClient.AuthenticationService.User
@{
    ViewBag.Title = "Login";
}

<!-- Breadcrumb -->
<section class="bg-half-170 d-table w-100 bg-light" style="background: url('../images/bg/page.png') top center;"
         id="home">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row mt-5">
            <!-- /col -->
            <div class="col-lg-12">
                <div class="title-heading text-center text-md-center">
                    <h3>Login</h3>
                    <nav aria-label="breadcrumb" class="d-inline-block mt-2">
                        <ul class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="../Home/Index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Login</li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /col -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</section>
<!-- /Breadcrumb -->
<!-- Contact -->
<section class="contact-section">
    <!-- Container -->
    <div class="container">
        <!-- row -->
        <div class="row clearfix">
            <!-- col -->
            <div class="col-md-12 col-sm-12 form-column">
                <div class="form-inner">
                    <h3>Login </h3>
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "default-form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row clearfix">
                            <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                @Html.TextBoxFor(model => model.username, new { placeholder = "Username" })
                                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                @Html.TextBoxFor(model => model.password, new { placeholder = "Password" })
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 form-group message-btn">
                                <button class="btn theme-btn" type="submit" name="submit-form">
                                    Login
                                </button>
                            </div>
                        </div>
                    }
                    <div class="login-link text-center">
                        <p>Don't have an account? <a href="../Home/Register">Register Now</a></p>
                    </div>
                </div>
            </div>
            <!-- col -->
        </div>
        <!-- /row -->
    </div>
    <!-- Container -->
</section>
<!-- /Contact -->
@section Scripts {
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    @if (Session["success"] != null)
    {
        <script>
            swal({
                title: "Success",
                text: "@Session["success"]",
                icon: "success",
                button: "ok"
            }).then((value) => {
                $.ajax({
                    url: "/Procedur/RemoveSession",
                    type: "GET",
                    success: function (response) {
                        console.log(response);
                    }
                })
            });
        </script>
    }
}
